  <object vnum="4099" name="Orb chaos (QUEST)" special="NONE">
    <description>\c23A dull sphere rests here.\c00</description>
    <shortdesc>\c08T\c09h\c11e \c12C\c13h\c14a\c08o\c09s \c11O\c12r\c13b\c00</shortdesc>
    <actiondesc/>
    <affectflag>0</affectflag>
    <objaffect location="NONE" modifier="0"/>
    <objaffect location="NONE" modifier="0"/>
    <objaffect location="NONE" modifier="0"/>
    <objaffect location="NONE" modifier="0"/>
    <objaffect location="NONE" modifier="0"/>
    <objaffect location="NONE" modifier="0"/>
    <objflags>
      <values value1="0" value2="0" value3="0" value4="0"/>
      <flags type="13" wear="16385" extra="69704"/>
      <data weight="8" cost="0" questcost="0" timer="0" bitvector="0"/>
    </objflags>
    <objprog main="OnTake" argtype="STRING" argument="north south east west">
      <action number="Emote" argtype="STRING" argument="A swirl of bright colors covers the orb for a moment."/>
      <action number="EmoteTo" argtype="STRING" argument="A voice whispers in your head, 'I am power.'"/>
    </objprog>
    <objprog main="OnWear" argtype="STRING" argument="north south east west">
      <action number="EmoteTo" argtype="STRING" argument="You are possessed by the orb!"/>
      <action number="Emote" argtype="STRING" argument="$N's eyes glow like they are on fire!"/>
      <action number="Emote" argtype="STRING" argument="$N speaks with a voice not $M own, '\c14I AM POWER MADE FLESH! LET THE LORD OF CHAOS RULE!\c00'"/>
    </objprog>
    <objprog main="OnActionWear" argtype="STRING" argument="say '">
      <action number="Stop" argtype="VOID" argument="NONE"/>
      <action number="EmoteTo" argtype="STRING" argument="Stop trying to speak you are possessed!"/>
      <action number="Emote" argtype="STRING" argument="$N's voice is like thunder, '\c14YOU SHALL ALL PERISH! I AM CHAOS!\c00'"/>
    </objprog>
    <objprog main="OnRemove" argtype="STRING" argument="say '">
      <sideterm number="Wolfkin" not="FALSE" argtype="VOID" argument="NONE"/>
      <action number="Stop" argtype="VOID" argument="NONE"/>
      <action number="Emote" argtype="STRING" argument="Jets of \c08burning fire\c00 erupt from $N's eyes stricking those close to $M."/>
      <action number="EmoteTo" argtype="STRING" argument="How many times must we go over this? YOU ARE POSSESSED start acting that way with emotes!"/>
    </objprog>
    <objprog main="OnActionWear" argtype="STRING" argument="giggle">
      <action number="Stop" argtype="VOID" argument="NONE"/>
      <action number="Emote" argtype="STRING" argument="$N raises $M hand to the sky and as \c13lightning bolts\c00 strike the ground around $M."/>
    </objprog>
    <objprog main="OnActionWear" argtype="STRING" argument="rofl">
      <action number="Stop" argtype="VOID" argument="NONE"/>
      <action number="Emote" argtype="STRING" argument="$N's eyes flare with godlike power and the Earth erupts around $M!"/>
    </objprog>
    <objprog main="OnActionWear" argtype="STRING" argument="chuckle">
      <action number="Stop" argtype="VOID" argument="NONE"/>
      <action number="Emote" argtype="STRING" argument="$N throws $M head back and laughs with insane glee as \c13swirling winds\c00 batter those around $M!"/>
    </objprog>
    <objprog main="OnActionWear" argtype="STRING" argument="laugh">
      <action number="Stop" argtype="VOID" argument="NONE"/>
      <action number="Emote" argtype="STRING" argument="$N's voice is filled with unspeakable power, '\c14THOU SHALT ALL PERISH IN THE STORM OF CHAOS! THE LANDS SHALL BE TORN TO PIECES!\c00'"/>
    </objprog>
    <objprog main="OnActionWear" argtype="STRING" argument="cackle">
      <action number="Stop" argtype="VOID" argument="NONE"/>
      <action number="Emote" argtype="STRING" argument="$N looks about, a dead stare in $M glowing eyes, $M lips turn to a snarl and \c08fire erupts\c00 from every pore in her body badly burning those near $M."/>
    </objprog>
    <objprog main="OnRemove" argtype="STRING" argument="cackle">
      <sideterm number="Wolfkin" not="TRUE" argtype="VOID" argument="NONE"/>
      <action number="Emote" argtype="STRING" argument="$N's eyes turn \c03g\c10o\c00\c03l\c10d\c00\c03e\c10n\c00 as $E stops holding the orb, you think you hear to howl of wolves in the distance."/>
    </objprog>
  </object>
